@model IEnumerable<SportClubs1.Data.Gym>



<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)" class="card-img-top" alt="Зображення спортзалу" >
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Address</p>
                    <a href="@Url.Action("Details", "Gyms", new { id = item.Address })" class="btn btn-primary">Детальніше</a>
                 </div>
            </div>
    }
</div>

</body>

